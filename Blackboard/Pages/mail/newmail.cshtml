@{
    string errorMessage = "";
    if (IsPost)
    {
        string ontvanger = Request.Form["ontvanger"];
        string onderwerp = Request.Form["onderwerp"];
        string msgbody = Request.Form["msgbody"];


        try
        {
            // Initialize WebMail helper
            WebMail.SmtpServer = "smtp.gmail.com";
            WebMail.SmtpPort = 587;
            WebMail.EnableSsl = true;
            WebMail.UserName = "hiddedv9@gmail.com";
            WebMail.Password = "Iksdih100";
            WebMail.From = "hiddedv9@gmail.com";

            // Send email
            WebMail.Send(to: ontvanger,
                subject: "Blackboard: " + onderwerp,
                body: msgbody
