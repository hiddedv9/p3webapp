            <input type="text" id="onderwerp" name="onderwerp" value="onderwerp" />
            <textarea name="msgbody" id="msgbody"></textarea>
            <button type="submit"></button>
            @{ if (errorMessage != "")
                {
                    <p>@errorMessage</p>
                }


            }

        </form>

    </body>

}